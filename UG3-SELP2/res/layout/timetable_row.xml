<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white">
    
    <LinearLayout
        android:id="@+id/timetableRowTimeContainer"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        
        <TextView 
            android:id="@+id/timetableRowTimeStart"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="bottom|center"
            android:textColor="@color/timeGreen"
            android:textSize="12sp"/>
        
        <TextView
            android:id="@+id/timetableRowTimeFinish"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:textColor="@color/timeGreen"
            android:textSize="12sp"/>
            
    </LinearLayout>
    
    <LinearLayout
        android:layout_toRightOf="@id/timetableRowTimeContainer"
        android:id="@+id/timetableRowDetailsContainer"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/timetableRowDetailsTitle"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textStyle="bold"
            android:gravity="bottom|center"
            android:textColor="@color/black"/>
        
        <LinearLayout
            android:id="@+id/timetableRowDetailsLocationContainer"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:orientation="horizontal"
            android:gravity="top|center">
            
            <ImageView 
                android:layout_width="15dp"
                android:layout_height="12dp"
                android:padding="0dp"
                android:src="@drawable/location"
                android:contentDescription="Map Icon"
                android:gravity="bottom"/>
            
            <TextView 
                android:id="@+id/timetableRowDetailsLocation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:maxLines="1"
                android:gravity="top"
                android:textColor="@color/courseTitle"/>
            
        </LinearLayout>
        
        <TextView 
	        android:id="@+id/timetableRowDescription"
	        android:layout_height="15dp"
	        android:layout_width="wrap_content"
	        android:maxLines="1"
	        android:textSize="12sp"
	        android:gravity="bottom"/>
        
        
        
    </LinearLayout>    

</RelativeLayout>
