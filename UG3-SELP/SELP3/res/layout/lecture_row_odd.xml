<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lectureRowContainer"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@color/white">
    
    <LinearLayout
        android:id="@+id/lectureRowTimeContainer"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/lectureRowStartTime"
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:text="10:00"
            android:gravity="bottom|center_horizontal"
            android:textSize="14sp"
            android:textColor="#f47564"
            android:textStyle="bold"/>
        
        <TextView 
            android:id="@+id/lectureRowFinishTime"
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:text="11:00"
            android:gravity="top|center_horizontal"
            android:textSize="14sp"
            android:textColor="#f47564"
            android:textStyle="bold"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:paddingLeft="5dp"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/lectureRowTitle"
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#515757"
            android:text="DBS - Database Systems"/>
        
        <TextView 
            android:id="@+id/lectureRowLocation"
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:textSize="13dp"
            android:textColor="#3D4651"
            android:text="LT5, Appleton Tower"/>
        
        <TextView 
            android:gravity="top"
            android:id="@+id/lectureRowDescription"
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:textSize="13dp"
            android:textColor="#8F9C9D"
            android:text="Once a month"/>
        
        
    </LinearLayout>
    

</LinearLayout>
