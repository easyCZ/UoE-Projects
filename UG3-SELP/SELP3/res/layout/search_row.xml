<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/courseRowSemester"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="S2"
        android:textColor="#f47564"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/courseRowSemester"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/courseRowTitle"
            android:ellipsize="end"
    		android:singleLine="true"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="DBS - Database Systems"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/courseRowLecturer"
            android:maxLines="1"
            android:ellipsize="middle"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_gravity="top"
            android:text="Johnie Walker"
            android:textSize="12sp" />
    </LinearLayout>



</RelativeLayout>